<div class="columns is-centered mt-6">
  <div class="column is-half">
    <% @entries.each do |day, entries| %>
      <h3 class="is-size-4 has-text-weight-bold has-text-centered mb-4">
        Entries for <%= day %>
      </h3>

      <% entries.each do |entry| %>
        <%= link_to entry_path(entry) do %>
          <div class="card">
            <div class="card-content">
              <strong><%= entry.meal_type %></strong><br/>
              <%= entry.calories %> calories,
              <%= entry.proteins %> grams of protein,
              <%= entry.carbohydrates %> grams of carbohydrates,
              <%= entry.fats %> grams of fat,
            </div>
          </div>
        <% end %>

      <% end %>

    <% end %>
  </div>
</div>